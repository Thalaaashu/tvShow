<% layout('layouts/boilerplate.ejs') %> 
<link rel="stylesheet" href="/stylesheets/star.css">
<div class="row">
  <div class="col-lg-3">
<form action="/tvshows" method="POST" novalidate class="validated-form" >
  <div class="input-group">
  <input type="text" name="search" class="form-control" placeholder="search tv show" required>
  <span class="input-group-append">
  <button class="btn btn-success"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
      <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
    </svg></button>
    </span>
    </div>
</form>
</div>
</div>
<br>
<div class="row d-flex justify-content-between">
  <div class="col-md-5">
    <div class="card">
  <img class="card-img-top top zoom-in" src="<%=tv.original%>" alt="Card image cap">
    </div>
    </div>
  <div class="col-md-6">
    <h5 class="text-light">Leave a Review</h5>
<form action="/tvshows/<%=tv._id%>/reviews" method="POST" novalidate class="validated-form">
  <img src="https://img.icons8.com/office/16/000000/filled-star--v1.png"/>
  <label for="rating" class="form-label text-light">Rate Tv Show</label>
<div class="rating"> 
  <input type="radio" name="rating" value="10" id="10">
  <label for="10">☆</label> 
  <input type="radio" name="rating" value="9" id="9">
  <label for="9">☆</label> 
  <input type="radio" name="rating" value="8" id="8">
  <label for="8">☆</label> 
  <input type="radio" name="rating" value="7" id="7">
  <label for="7">☆</label> 
  <input type="radio" name="rating" value="6" id="6">
  <label for="6">☆</label> 
  <input type="radio" name="rating" value="5" id="5">
  <label for="5">☆</label> 
  <input type="radio" name="rating" value="4" id="4">
  <label for="4">☆</label> 
  <input type="radio" name="rating" value="3" id="3">
  <label for="3">☆</label> 
  <input type="radio" name="rating" value="2" id="2">
  <label for="2">☆</label> 
  <input type="radio" name="rating" value="1" id="1">
  <label for="1">☆</label>
</div>
  <label for="review" class="form-label text-light">Review</label>
  <textarea name="review" id="review" class="form-control" cols="30" rows="2" required></textarea>
  <button class="btn btn-success mt-1">Submit</button>
</form>
<br>
<% if(tv.reviews.length) {%> 
<h5 class="text-light">Reviews</h5>
<% } else{%> 
  <div class="d-flex justify-content-center">
    <h1 class="text-light">No Reviews</h1>
  </div>
  <% } %> 
<% for(review of tv.reviews) {%>
<div id="silver"class="card mb-1 border border-light">
  <div class="card-body">
    
<h3> <img src="https://img.icons8.com/emoji/48/000000/star-emoji.png"><%if(!review.rating){%>0<%}else{%><%=review.rating%><%}%>/10</h3>
<div class="review"> <%=review.review%></div>
<div class="text-muted"> -<%=review.reviewAuthor.username  %> </div>
<% if(review.reviewAuthor.equals(user._id)) {%> 
<form action="/tvshows/<%=tv._id%>/<%=review._id%>?_method=DELETE" method="POST">
  <button class="btn mt-3 btn-danger">Delete</button>
</form>
<% } %> 
</div>
</div>
<% } %>  
</div>
</div>
</div>