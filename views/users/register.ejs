<% layout("layouts/boilerplate.ejs") %>
<div class="row">
    <div class="col-lg-4 offset-lg-4 ">
<form action="/register" method="POST" novalidate class="validated-form">
    <div class="form-row">
    <h1 class="text-light">Register</h1>
    </div>
    <div class="form-row">
    <label for="username" class="form-label text-light">Username</label>
    <input type="text" minlength=3 maxlength=20 id="username" name="username" class="form-control" required>
    </div>
    <div class="valid-feedback">Looks good!</div>
    <div class="form-row">
    <label for="email" class="form-label text-light">Email</label>
    <input type="email" id="email" name="email" class="form-control" required>
    </div>
    <div class="valid-feedback">Looks good!</div>
    <div class="form-row">
    <label for="password" class="form-label text-light">Password</label>
    <input type="password" minlength=8 maxlength=64 id="password" name="password" class="form-control" required>
    </div>
    <div class="valid-feedback">Looks good!</div>
    <div class="form-row mt-1">
    <button class="btn btn-success">Register</button>
    </div>
</form>
<br>
<span class="text-light">Already have an account?</span>
<a  href="/login">Login</a>
</div>
</div>